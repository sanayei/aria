# ARIA Configuration
# Copy this file to .env and customize as needed

# ============================================================================
# Ollama Configuration
# ============================================================================

# Ollama server URL
# For WSL connecting to Windows Ollama:
#   - Try your Windows host IP first (e.g., 127.0.0.1:11434)
#   - If that doesn't work, try host.docker.internal:11434
# For local: http://localhost:11434
OLLAMA_HOST=http://127.0.0.1:11434

# Primary LLM model for reasoning and tool calling
OLLAMA_MODEL=qwen3:30b-a3b

# Timeout for Ollama API calls in seconds (10-600)
# Note: With many tools registered (9+ tools), the prompt becomes very large
# and processing can take 2-5 minutes on first call. Increase to 300+ if you see timeouts.
OLLAMA_TIMEOUT=300

# Temperature for LLM generation (0.0-2.0)
OLLAMA_TEMPERATURE=0.7

# ============================================================================
# Application Settings
# ============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
ARIA_LOG_LEVEL=INFO

# Base directory for all local data storage
ARIA_DATA_DIR=./data

# Maximum number of conversation turns to keep in context (1-1000)
ARIA_MAX_HISTORY=50

# ============================================================================
# Database Configuration
# ============================================================================

# Path to SQLite database (defaults to ./data/cache/aria.db if not set)
# DB_PATH=./data/cache/aria.db

# ============================================================================
# Vector Store Configuration
# ============================================================================

# Path to ChromaDB storage (defaults to ./data/chroma if not set)
# CHROMA_PATH=./data/chroma

# ChromaDB collection name for knowledge base
CHROMA_COLLECTION=aria_knowledge

# ============================================================================
# Gmail Configuration
# ============================================================================

# Path to Gmail API credentials file (download from Google Cloud Console)
GMAIL_CREDENTIALS_PATH=./credentials.json

# Path to Gmail API token file (auto-generated after OAuth)
GMAIL_TOKEN_PATH=./token.json

# Gmail metadata cache TTL in seconds (0 = no cache)
GMAIL_CACHE_TTL=300

# ============================================================================
# Tool Execution Settings
# ============================================================================

# Automatically approve low-risk tool executions (read-only operations)
TOOL_AUTO_APPROVE_LOW_RISK=true

# Require user confirmation for medium+ risk tools
TOOL_REQUIRE_CONFIRMATION=true

# Default timeout for tool execution in seconds (5-600)
TOOL_TIMEOUT=60

# ============================================================================
# Agent Settings
# ============================================================================

# Maximum number of agent loop iterations (1-100)
AGENT_MAX_ITERATIONS=20

# Enable verbose agent logging (useful for debugging)
AGENT_VERBOSE=false
